# ZeroSite v7.1 Production Environment Configuration

# 환경 설정
ENVIRONMENT=production

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=4

# 데이터베이스 (필요시)
# DATABASE_URL=postgresql://user:password@localhost:5432/zerosite

# API 키
KAKAO_API_KEY=your_kakao_api_key_here
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here
GOOGLE_API_KEY=your_google_api_key_here

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/credentials.json
SPREADSHEET_ID=your_spreadsheet_id_here

# LH 공고문 설정
LH_NOTICE_URL=https://apply.lh.or.kr
LH_NOTICE_UPDATE_INTERVAL=3600

# 캐시 설정
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# 로깅
LOG_LEVEL=INFO
LOG_DIR=/var/log/zerosite

# 모니터링
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ENABLE_MONITORING=true

# 보안
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 성능
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=120
CACHE_ENABLED=true

# 파일 업로드
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/var/zerosite/uploads

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# 백업
BACKUP_ENABLED=true
BACKUP_DIR=/var/backups/zerosite
BACKUP_RETENTION_DAYS=30
