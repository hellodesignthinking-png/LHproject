# ZeroSite v11.0 - Environment Configuration
# ============================================
# Copy this file to .env and customize values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Redis Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable/disable Redis (true/false)
# If false, in-memory storage will be used
REDIS_ENABLED=true

# Redis server host
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Enable SSL/TLS (true/false)
REDIS_SSL=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Database Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Database URL
# Examples:
#   SQLite:     sqlite:///zerosite.db
#   PostgreSQL: postgresql://user:password@localhost:5432/zerosite
#   MySQL:      mysql+pymysql://user:password@localhost:3306/zerosite
DATABASE_URL=sqlite:///zerosite.db

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Environment (development/staging/production)
ENVIRONMENT=development

# API host and port
API_HOST=0.0.0.0
API_PORT=8005

# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Context Storage Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Default TTL for context storage (hours)
CONTEXT_TTL_HOURS=24

# Enable context snapshots in database (true/false)
CONTEXT_DB_SNAPSHOTS=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Pipeline Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Pipeline timeout (seconds)
PIPELINE_TIMEOUT=60

# Enable caching (true/false)
PIPELINE_CACHE_ENABLED=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# External API Keys (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Naver Maps API (if needed)
NAVER_MAPS_CLIENT_ID=
NAVER_MAPS_CLIENT_SECRET=

# Kakao API (if needed)
KAKAO_API_KEY=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Security Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Secret key for JWT (if needed)
SECRET_KEY=your-secret-key-here-change-in-production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Production Configuration (Override in production .env)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Example Production Settings:
# ENVIRONMENT=production
# REDIS_ENABLED=true
# REDIS_HOST=redis.example.com
# REDIS_PASSWORD=your_production_password
# DATABASE_URL=postgresql://user:pass@db.example.com:5432/zerosite
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://app.example.com
