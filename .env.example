# ============================================
# ZeroSite v7.1 - Environment Configuration
# ============================================
# 
# SECURITY WARNING: Never commit real API keys to version control!
# Copy this file to .env and fill in your actual values
#
# Setup Instructions:
# 1. cp .env.example .env
# 2. Edit .env with your real API keys
# 3. Ensure .env is in .gitignore
# ============================================

# ============================================
# API Keys (REQUIRED)
# ============================================

# Kakao REST API Key
# Get from: https://developers.kakao.com/
KAKAO_REST_API_KEY=your_kakao_api_key_here

# Land Regulation API Key (VWorld)
# Get from: https://www.vworld.kr/
LAND_REGULATION_API_KEY=your_vworld_api_key_here

# MOIS (Ministry of Interior and Safety) API Key
# Get from: https://www.data.go.kr/
MOIS_API_KEY=your_mois_api_key_here

# OpenAI API Key (Optional - for AI features)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=

# Google Places API Key (Optional - for POI fallback)
# Get from: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=

# Naver API Keys (Optional - for POI fallback)
# Get from: https://developers.naver.com/
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# ============================================
# Database Configuration
# ============================================

# PostgreSQL (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/lh_analysis

# SQLite (Development - Default)
# DATABASE_URL=sqlite:///./lh_analysis.db

# ============================================
# Cache & Session
# ============================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# Session Secret (Generate with: openssl rand -hex 32)
SESSION_SECRET_KEY=generate_a_secure_random_key_here

# ============================================
# Application Settings
# ============================================

# Debug Mode (Set to False in production!)
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Report Generation
# ============================================

# Output Directory for Reports
REPORTS_OUTPUT_DIR=./output/reports

# Max Concurrent Analysis Workers
MAX_ANALYSIS_WORKERS=4

# Report Watermark Text
REPORT_WATERMARK=ZeroSite

# ============================================
# Google Services (Optional)
# ============================================

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_PATH=./google_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_WORKSHEET_NAME=토지분석기록

# Google Docs Integration
GOOGLE_DOCS_CREDENTIALS_PATH=./google_credentials.json

# Google Drive Integration
GOOGLE_DRIVE_FOLDER_ID=

# ============================================
# External API Endpoints (Usually don't change)
# ============================================

KAKAO_API_BASE_URL=https://dapi.kakao.com
LAND_REGULATION_API_BASE_URL=http://apis.data.go.kr/1613000/LandInfoService
MOIS_API_BASE_URL=http://apis.data.go.kr/1741000/HousePopulationInformationService

# ============================================
# Monitoring & Logging (Optional)
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE_PATH=./logs/zerosite.log

# Sentry DSN (Error Tracking - Optional)
SENTRY_DSN=

# ============================================
# Rate Limiting
# ============================================

# API Rate Limit (requests per minute)
API_RATE_LIMIT=60

# ============================================
# Security Settings
# ============================================

# JWT Secret Key (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=generate_a_secure_random_key_here

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Expiration (minutes)
JWT_EXPIRATION_MINUTES=1440

# ============================================
# Feature Flags
# ============================================

# Enable/Disable Features
ENABLE_MULTI_PARCEL_ANALYSIS=True
ENABLE_GEO_OPTIMIZATION=True
ENABLE_LH_NOTICE_LOADER=True
ENABLE_GOOGLE_SHEETS_EXPORT=False
ENABLE_GOOGLE_DOCS_EXPORT=False

# ============================================
# Performance Tuning
# ============================================

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Max Upload File Size (MB)
MAX_UPLOAD_SIZE_MB=10

# Cache TTL (seconds)
CACHE_TTL=3600
