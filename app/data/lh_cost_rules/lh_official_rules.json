  "base_rules": {
    "design_fee": {
      "description": "설계비 (Design Fee)",
      "rate_range": {
        "min": 0.08,
        "standard": 0.10,
        "max": 0.12
      },
      "basis": "percentage of construction cost",
      "notes": [
        "Standard rate: 10% of construction cost",
        "Varies by project complexity",
        "Includes architectural, structural, MEP design"
      ]
    },
    
    "supervision_fee": {
      "description": "감리비 (Construction Supervision Fee)",
      "rate_range": {
        "min": 0.03,
        "standard": 0.04,
        "max": 0.05
      },
      "basis": "percentage of construction cost",
      "notes": [
        "Standard rate: 4% of construction cost",
        "Full-time supervisor required for projects > 50 units"
      ]
    },
    
    "general_management": {
      "description": "일반관리비 (General Management Cost)",
      "rate": 0.05,
      "basis": "percentage of total hard cost",
      "notes": [
        "Fixed at 5%",
        "Covers project management, administration"
      ]
    },
    
    "contingency": {
      "description": "예비비 (Contingency)",
      "rate_range": {
        "min": 0.05,
        "standard": 0.10,
        "max": 0.15
      },
      "basis": "percentage of total project cost",
      "notes": [
        "Standard: 10%",
        "Increased for complex sites",
        "Covers unforeseen costs"
      ]
    },
    
    "vat": {
      "description": "부가가치세 (VAT)",
      "rate": 0.10,
      "basis": "percentage of total cost",
      "exemptions": [
        "Land acquisition (exempt)",
        "Residential rental housing (reduced rate)"
      ]
    }
  },
  
