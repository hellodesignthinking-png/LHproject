# ZeroSite v21 Professional Edition - Production Environment
# Last Updated: 2025-12-10

# Server Configuration
ENVIRONMENT=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8040
DEBUG=false
LOG_LEVEL=INFO

# Application Settings
APP_NAME="ZeroSite v21 Professional Edition"
APP_VERSION="21.0.0"
API_PREFIX="/api"

# Report Generation Settings
REPORT_OUTPUT_DIR=/home/user/webapp/generated_reports
REPORT_CACHE_ENABLED=true
REPORT_CACHE_TTL=3600

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
GENERATION_TIMEOUT=15

# Logging Configuration
LOG_DIR=/home/user/webapp/logs
LOG_FILE=zerosite_v21_production.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=8041
HEALTH_CHECK_INTERVAL=60

# Security Settings
CORS_ORIGINS=*
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Database Settings (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=zerosite_v21
# DB_USER=zerosite
# DB_PASSWORD=secure_password

# Cache Settings (Redis optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@zerosite.com
# SMTP_PASSWORD=email_password
# ALERT_EMAIL=admin@zerosite.com

# Feature Flags
ENABLE_V21_ENDPOINT=true
ENABLE_V3_ENDPOINT=true
ENABLE_PDF_GENERATION=true
ENABLE_BATCH_GENERATION=true

# Business Metrics
TARGET_GENERATION_TIME=5.0
TARGET_SUCCESS_RATE=99.0
TARGET_REPORT_QUALITY=A+
